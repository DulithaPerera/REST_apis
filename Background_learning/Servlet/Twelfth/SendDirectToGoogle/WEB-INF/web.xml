<web-app xmlns="http://java.sun.com/xml/ns/j2ee">
    <servlet>
        <servlet-name>ExternalSearch</servlet-name>
        <servlet-class>externalSearchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>InternalSearch</servlet-name>
        <servlet-class>InternalSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExternalSearch</servlet-name>
        <url-pattern>/externalSearch</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>InternalSearch</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>Search.html</welcome-file>
    </welcome-file-list>
</web-app>